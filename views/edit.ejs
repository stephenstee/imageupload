<%- include("partials/header")%>

<div class="row">
        <h1 style="text-align: center">Edit <%= imagee.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/home/<%=imagee._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=imagee.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= imagee.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            
        </div>
    </div>
<%- include("partials/footer")%>